/**order.wxss**/

.orderWrpper {
    width: 100%;
    height: 100%;
}
.topTabList{
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    z-index: 999;
}
.orderTab {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    display: flex;
    color: #444;
    border-top: 1px solid #f6f6f6;
    padding: 0 15rpx;
}

.status {
    flex: 1;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    border-bottom: 4rpx solid #fff;
}

.current {
    border-bottom: 4rpx solid #f03340;
    color: #f03340;
}

.imgCenter {
    width: 240rpx;
    height: 150rpx;
    margin-bottom: 30rpx;
}

.noCodeBox {
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    height: 100%;
    padding-top: 50%;
}

.noCodeText {
    font-size: 28rpx;
    color: #b5adad;
}
.orderList {
    margin-bottom: 16rpx;
}
.orderList:first-child{
     margin-top: 110rpx;
}
.userImg {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    vertical-align: middle;
    margin-right: 24rpx;
}

/*itemHeader  */

.itemHeader {
    padding: 20rpx 0;
    display: flex;
    display: -webkit-flex;
    justify-content: flex-start;
    box-sizing: border-box;
}

.itemMessage {
    width: 100%;
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
}
.itemMessage>view:nth-child(1) {
    padding-bottom: 10rpx;
}

.itemMessage .name {
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: #444;
}

.itemMessage .orderNO {
    width: 450rpx;
}

.itemMessage .orderNO, .itemMessage .productNum {
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #a1a1a1;
}

.itemMessage .orderStatus {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #f03340;
    /* text-align:right; */
}

/*itemContent  */

.itemContent {
    padding: 20rpx 0;
    display: flex;
    display: -webkit-flex;
    justify-content: flex-start;
}

.itemContent .skuImg {
    width: 130rpx;
    height: 130rpx;
    border-radius: 4px;
    border: 1rpx solid #f6f6f6;
}

.listItem {
    display: flex;
    flex-direction: column;
    width: 100%;
    padding-left: 20rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
}

.listItem .listInfo {
    height: 100rpx;
    line-height: 47rpx;
    color: #444;
}

.listItem .listNum {
    color: #a1a1a1;
}

/*itemPrice  */

.itemPrice {
    padding: 24rpx 0;
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #444;
    text-align: right;
}

.itemPrice text {
    color: #000;
}

.itemPrice .price {
    font-family: PingFangSC-Medium;
    font-size: 34rpx;
    line-height: 37rpx;
    padding: 0 15rpx 0 5rpx;
}

/*itemBtnBox  */

.itemBtnBox {
    background: #fff;
    width: 100%;
    padding: 30rpx 0;
}

.itemBtnBox .btnBox {
    display:flex;
    justify-content:flex-end;
}

.itemBtnBox .btn {
    width: 160rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 100px;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    text-align: center;
    background: #fff;
}

.itemBtnBox .btnGray {
    border: 1px solid #a1a1a1;
    color: #444;
    margin-right: 30rpx;
}

.itemBtnBox .btnRed {
    border: 1px solid #f03340;
    color: #f03340;
}
