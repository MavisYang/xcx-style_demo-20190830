.cropper-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: rgba(0, 0, 0, 0.95);
  color: #04b00f;
}

.uploadImgWrapper {
  padding: 30rpx;
}

.upload-view {
  text-align: center;
  width: 610rpx;
  height: 610rpx;
  margin: 0 auto;
}

.changeupload {
  position: relative;
}

.changeupload .uploadImg,.cropperImg {
  width: 610rpx;
  height: 610rpx;
}

.changeupload .changeImgBtn {
  position: absolute;
  left: 0;
  bottom: 0;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #fff;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: rgba(0, 0, 0, 0.5);
}

.changeupload .deleteImgBtn {
  position: absolute;
  right: 0;
  top: 0;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-weight: 800;
  text-align: center;
}

.changeupload .deleteImgBtn image {
  width: 60rpx;
  height: 60rpx;
}

.imageWrapper {
   display: flex;
  align-items: center;
  justify-content: flex-start;
  margin: 36rpx 0;
}

.imageWrapper .changeImgItem {
  height: 120rpx;
  width: 120rpx;
   margin-right:13rpx;
   position: relative;
  border: 4rpx solid transparent;
  border-radius: 2rpx;
  text-align: center;
}
.imageWrapper .changeImgItem:last-child{
   margin-right: 0;
}

.imageWrapper .changeImgHover {
  border: 4rpx solid #ff3939;
}

.changeImg-image {
  width: 120rpx;
  height: 120rpx;

}
.changeImg-btn {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 40rpx;
  line-height: 40rpx;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.5);
}
