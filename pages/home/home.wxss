.testwrapper{
  padding: 24rpx;
}
.testwrapper>view{
  padding: 16rpx 0;
}

icon {
  vertical-align: middle;
}
.weui-cell {
  padding: 10px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
}
.weui-cell_input {
  padding-top: 0;
  padding-bottom: 0;
}
.weui-uploader__hd {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding-bottom: 10px;
  align-items: center;
}
.weui-uploader__title {
  flex: 1;
}
.weui-uploader__info {
  color: #b2b2b2;
}
.weui-uploader__bd {
  margin-bottom: -4px;
  margin-right: -9px;
  overflow: hidden;
}
.weui-uploader__file {
  float: left;
  margin-right: 9px;
  margin-bottom: 9px;
  position: relative;
}
.weui-uploader__img {
  display: block;
  width: 79px;
  height: 79px;
}
.weui-uploader__delete{
  position: absolute;
  bottom: 0;
  left: 0;
  color: #fff;
  background: rgba(0,0,0,.5);
  width:100%;
  height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  display: inline-block;
}
.weui-uploader__input-box {
  float: left;
  position: relative;
  margin-right: 9px;
  margin-bottom: 9px;
  width: 77px;
  height: 77px;
  border: 1px solid #d9d9d9;
}
.weui-uploader__input-box:before, .weui-uploader__input-box:after {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}
.weui-uploader__input-box:before {
  width: 2px;
  height: 39.5px;
}
.weui-uploader__input-box:after {
  width: 39.5px;
  height: 2px;
}
.weui-uploader__input {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.tab-scroll{
  font-family:PingFangSC-Regular;
  font-size:28rpx;
  display:flex;
  color:#444;
  border-top:1px solid #f6f6f6;
  /* padding:0 15rpx; */
}
.tab-scroll .tab-item{
  flex: 1;
  display: inline-block;
  text-align:center;
  height:88rpx;
  line-height:88rpx;
  padding: 0 10rpx;
  border-bottom: 2px solid transparent;
}
.tab-scroll .tab-text{
  padding:16rpx 0;
}
.tab-text-on{
  border-bottom: 2px solid #ff0000;
  color:  #ff0000;
}

