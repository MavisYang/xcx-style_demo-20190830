}

.item-ipt-adr {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.textarea{
  width: 528rpx;
  height: 190rpx;
  border-radius: 10rpx;
  padding: 12rpx 30rpx;
  margin:30rpx 0;
  box-sizing: border-box;
}



/*modal  */

.viewpager{
  width: 100%;
  border-bottom: 1px solid #ccc;
  padding-bottom:4rpx;

}
/*遮罩层 begin*/

.modal-mask{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .4);
    z-index: 199;
}
 /*初始隐藏*/
.modal .hidden {
	display: none;
}

/*运行时显示*/
.modal .show {
	display: block;
}

/*弹窗主体*/
.modal-content {
	display: inline-block;
	position: fixed;
  bottom: -285px;
	left: 0;
	width: 100%;
	height: 285px;
	/*box-shadow: 10rpx 0 30rpx rgba(0,0,0,.9);*/
	padding-top: 5px;
	background: #fff;
	z-index: 999;

}
/*弹窗头部*/
.modal-header {
	padding: 4rpx 10rpx;
	font-size: 32rpx;
	color: #666;
	display: flex;
	flex-direction: row;
	/* align-items: center; */
	justify-content: space-between;
	line-height: 30px;
}

/*所在地区字样*/
.modal-title {
	text-align: center;
	width: 100%;
}

/*关闭按钮*/
.modal-close {
	width: 40rpx;
	height: 40rpx;
}
/*内容*/
.modal-body {
	font-size: 28rpx;
}
/*每级地区标题*/
.viewpager-title {
	padding: 0 10rpx;
	/*color: #f03118;*/
	line-height: 30px;
}

/*左右滑动控件*/
.swiper-area {
	height:220px;
}

/*地址列表ListView容器*/
.viewpager-listview {
	height: 100%;
}

/*每行地址item项*/
.viewpager-listview view{
	line-height: 30px;
	padding: 0 10px;
}

/*高亮当前所选地区*/
.area-selected {
	color: red;
}

/*初始隐藏*/
.hidden {
	display: none;
}

/*运行时显示*/
.show {
	display: block;
}

/*单元格*/
.cell {
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items:center;
	margin: 4px;
	border-bottom: 1px solid #eee;
	line-height: 28px;
}

.cell:last-child {
	border-bottom: 0;
}

/*label显示字符*/
.cell text:first-child {
	width: 50px;
}

/*请选择区域*/
.region {
	width: 90%;
}

/*保存按钮*/
.save {
	margin: 8px;
}

/* model end */
